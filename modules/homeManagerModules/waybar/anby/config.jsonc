    // Choose the order of the modules
    "modules-left": [ "clock", "tray" ],
    "modules-center": [ "hyprland/workspaces" ],
    "modules-right": [ 
        "pulseaudio",
        "backlight",
        "keyboard-state",
        "network",
        "battery",
        "custom/power"
